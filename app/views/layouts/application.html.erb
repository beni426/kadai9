<!DOCTYPE html>
<html>
  <head>
    <title>FriendApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content = "width=device-width">
     <%= favicon_link_tag 'user-logo.png' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
  <header class='header-menu'>
  
  
         <div class="row">
          
           <% if logged_in? %>
              <ul class='navbar' >
              <li class="col-sm-5"> <input type="search" id="site-search" name="q"
       placeholder='search'></li>
              <li class="col-sm-3"> <%= link_to 'Home', pictures_path %>
              <li class="col-sm-2"> <%= link_to 'profile', user_path(current_user.id) %></li>
              
              <li class="col-sm-1"> <%= link_to "Logout",session_path(current_user.id), method: :delete %><?li>
               <% else %>
             <li class="col-sm-2"> <%= link_to "Sign up", new_user_path %></li>
             <li class="col-sm-3"> <%= link_to "Login",new_session_path %></li>
             </ul>
          <% end %>
        </div>
  </div>
   </header>
    

   
  <%= yield %>
  </body>
  




  <script type="text/javascript">
 

    let commentButton = document.querySelectorAll('.comment-button');
    let commentField = document.querySelectorAll('.comment-field');

    commentButton.forEach(event => event.addEventListener('click', focus_function));

    function focus_function() {
       let index = Array.from(commentButton).indexOf(this);
       // console.log(index);
       // if (this.style.color == 'red') {
       //   this.style.color = 'black';
       // } else {
       //   this.style.color = 'red';
       // }
       commentField[index].focus();
    }

  </script>


</html>
