<ul class='comment-layout'>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
     <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
      <li class='list-layout'>
        <p> Posted by : <%= @current_user.name %></p>
        <span></span>
        <p><%= comment.content %></p>
        <p id='button-layout'><%= button_to "コメント編集", edit_picture_comment_path(picture, comment),method: :get, class:'btn-default1',remote: true %></p>
        <p><%= button_to "コメント削除", picture_comment_path(comment.picture_id, comment.id), method: :delete, class:'btn-default1', remote: true,
                                        data: { confirm: "本当に削除しますか?"} %></p>
      </li>
    <% end %>
  <% end %>
</ul>